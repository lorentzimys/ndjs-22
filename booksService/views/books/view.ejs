<div class="card m-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="card-title"><%= book.title %></h5>
    <a href="/books/<%= book.id %>/edit" class="btn btn-primary btn-sm">
      <i class="fa fa-pencil"></i>
    </a>
  </div>
  <div class="card-body d-flex">
    <img
        src="<%= book.fileCover %>"
        onerror="this.onerror=null;this.src='/img/placeholder-image.png';"
        class="img-fluid mr-3 w-25 p-2"
        alt="<%= book.fileCover %> cover"
    >
    <div class="flex-grow-1">
      <p class="card-text"><%= book.description%></p>
      <div>
        <ul class="list-inline">
          <li class="list-inline-item">Авторы:</li>
            <% book.authors?.forEach((author) => { %>
                <li class="badge badge-pill badge-info"><%= author %></li>
            <% }) %>
        </ul>
      </div>
      <% if (typeof viewsCount !== 'undefined') { %>
        <div><i class="fa fa-eye"></i> <%= viewsCount %></div>
      <% } %>
    </div>
  </div>
</div>
